/********************/

body{
    width:100%;
    margin:auto;
    background-color:aliceblue
}
.grid-rcontainer {
    min-height: 100vh;
    display: grid;
    /*grid-template-columns: 50% auto auto auto auto auto;*/
    grid-template-columns: repeat(11,1fr);
    grid-gap: 0px;
    background-color: #ffffff;
    padding: 10px;
    border-bottom: solid 1px #ccc;
    grid-column-gap: 50px;
}

  



.header {
    display: grid;
    grid-template-columns: repeat(11,1fr);
    grid-column: 1/12;
    grid-row: 1 / 10;
   
    background-color:aqua
}

.topbar {
    grid-column: 1/12;
    grid-row: 2/3;
    margin-top:3px;
    margin-bottom:3px;
    border:solid 1px red;
    background-color:rgb(182, 192, 36)
}

.below-top{
    grid-column: 3/10;
    grid-row: 3/4;
    border:solid 1px blue;
}

.nav {
    grid-column: 1/12;
    grid-row: 3/ 5;
    border:solid 1px rgb(255, 255, 0);


}

.nav ul{
 list-style:none;
 background-color:blue;
}

.nav li{
    padding: 10px 10px;
  
    list-style: none;
    display:inline-block;
}
.navbar-brand{
    grid-column: 3/10;
    grid-row: 3/4;
    padding: 2px;
    border: solid 1px rgb(234, 0, 255);
    margin-top: 20px;
    margin-bottom:20px;
}

.logo{
    grid-column: 1/3;
    grid-row: 3/4;
    padding:2px;
    margin-top: 20px;
    margin-bottom:20px;
    border:solid 1px rgb(33, 67, 100);   
}


.menu{
    grid-column: 3/8;
    grid-row: 5/6;
    padding:2px;
    border:solid 1px rgb(18, 165, 28);   
}

.search{
    grid-column: 8/11;
    grid-row: 5/6;
    padding:2px;
    margin-left:5px;
    border:solid 1px rgb(18, 165, 28);   
}
/*
